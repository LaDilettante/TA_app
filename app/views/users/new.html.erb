<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, as: :user, url: users_path, method: 'POST' do |f| %>
      <%#= @user.becomes(User) is equivalent with @user, as: :user %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= debug f.object.errors %>
      <%= f.label :type %>
      <%= f.select :type, @type_options %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create account", class: "btn btn-large" %>
    <% end %>
  </div>
</div>