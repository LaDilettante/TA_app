<h1>Edit your submission</h1>

<div class="row">
  <div class="span4">
    <%= form_for @doc, 
          url: student_homework_document_path(student_id: @doc.submitter_id,
                                               id: @doc.id),
          html: { multipart: true } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.label :ungraded_file %>
      <% if f.object.ungraded_file.exists? %>
        <%= link_to f.object.ungraded_file_file_name,
                    f.object.ungraded_file.url %>
      <% end %>
      <%= f.file_field :ungraded_file %>

      <%= f.label :ungraded_file_source_code %>
      <% if f.object.ungraded_file_source_code.exists? %>
        <%= link_to f.object.ungraded_file_source_code_file_name,
                    f.object.ungraded_file_source_code.url %>
      <% end %>
      <%= f.file_field :ungraded_file_source_code %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>