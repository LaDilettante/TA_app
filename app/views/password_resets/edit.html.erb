<% provide(:title, "Create new password") %>

<%= form_for @user, as: :user, url: password_reset_path(params[:id]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create new password", class: "btn btn-large" %>
<% end %>