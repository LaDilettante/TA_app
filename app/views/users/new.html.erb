<h1>Sign up page</h1>

<%= form_for @user, url: users_path, method: 'POST' do |f| %>
  <%= f.label :type %>
  <%= f.select :type, @type_options %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign up" %>
<% end %>