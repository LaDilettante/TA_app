<% provide(:title, "Profile") %>
<h1>Profile page</h1>

<% if signed_in? %>
  <%= link_to "Sign out", signout_path, method: 'delete' %>
<% end %>

<% if current_user?(@user) || current_user.teacher? %>
  <%= link_to "Edit your profile", edit_user_path(@user) %>
<% end %>



<% if @user.type == 'Student' %>
  <% @student = @user %>
  <%= render 'student' %>
<% elsif @user.type == 'Teacher' %>
  <% @teacher = @user %>
  <%= render 'teacher' %>
<% end %>