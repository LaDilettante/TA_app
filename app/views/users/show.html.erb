<% provide(:title, "Profile") %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<% if @user.student? %>
  <% @student = @user %>
  <%= render 'student' %>
<% elsif @user.teacher? %>
  <% @teacher = @user %>
  <%= render 'teacher' %>
<% end %>

