<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the TA app</h1>

    <h3>Easing the TA life since 2014!</h3>

    <%= link_to "Sign up", signup_path,
                                class: "btn btn-large btn-primary" %>
    <br>
    <%= link_to image_tag("unhelpful-teacher.jpg", alt: "Unhelpful Teacher"), root_path %>
  </div>

  
<% end %>